<Page x:Class="TextAnalysis.ResultPages.BarDiagramPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TextAnalysis.ResultPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BarDiagramPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Margin="7" MouseUp="PaintingSurface_MouseUp" x:Name="PaintingSurface" Background="LightGray" Grid.Column="1" ToolTip="Нажмите, чтобы отобразить график"/>
    </Grid>
</Page>
